---
import { Image } from 'astro:assets'
import { getEntry } from 'astro:content'

const { id } = Astro.props

const skill = await getEntry('skill', id)

const { name, color, colorText, icon } = skill.data
---

<div class='rounded-sm overflow-hidden font-bold text-xs inline-flex'>
  {
    icon && (
      <div class='pr-1 inline-flex justify-center items-center'>
        <Image
          height={20}
          width={20}
          src={icon}
          alt={name}
          class='block w-5 h-5'
        />
      </div>
    )
  }
  <div
    class={`py-1 px-2 inline-block`}
    style={`background-color: ${color}; color: ${colorText ? colorText : '#fff'}`}
  >
    {name}
  </div>
</div>
